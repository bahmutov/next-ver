{
  "name": "next-ver",
  "description": "Tells you the next semantic version for your local package",
  "version": "0.0.0-development",
  "author": "Gleb Bahmutov <gleb.bahmutov@gmail.com>",
  "bugs": "https://github.com/bahmutov/next-ver/issues",
  "bin": {
    "next-ver": "bin/next-ver.js"
  },
  "preferGlobal": true,
  "config": {
    "pre-git": {
      "commit-msg": "simple",
      "pre-commit": [
        "npm prune",
        "npm run deps",
        "npm test",
        "npm run ban"
      ],
      "pre-push": [
        "npm run license",
        "npm run ban -- --all",
        "npm run size"
      ],
      "post-commit": [],
      "post-merge": []
    }
  },
  "engines": {
    "node": ">=6"
  },
  "files": [
    "bin",
    "src/*.js",
    "!src/*-spec.js"
  ],
  "homepage": "https://github.com/bahmutov/next-ver#readme",
  "keywords": [
    "next",
    "semantic",
    "semver",
    "version"
  ],
  "license": "MIT",
  "main": "src/",
  "noScopeName": "next-ver",
  "publishConfig": {
    "registry": "http://registry.npmjs.org/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bahmutov/next-ver.git"
  },
  "scripts": {
    "ban": "ban",
    "deps": "deps-ok && dependency-check .",
    "issues": "git-issues",
    "license": "license-checker --production --onlyunknown --csv",
    "lint": "standard --verbose --fix bin/*.js src/*.js",
    "pretest": "npm run lint",
    "secure": "nsp check",
    "size": "t=\"$(npm pack .)\"; wc -c \"${t}\"; tar tvf \"${t}\"; rm \"${t}\";",
    "test": "npm run unit",
    "unit": "mocha src/*-spec.js",
    "dont-break": "dont-break --timeout 180",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "devDependencies": {
    "ban-sensitive-files": "1.9.0",
    "dependency-check": "2.9.1",
    "deps-ok": "1.2.1",
    "dont-break": "1.8.0",
    "execa-wrap": "1.1.0",
    "git-issues": "1.3.1",
    "license-checker": "14.0.0",
    "mocha": "3.5.3",
    "nsp": "2.8.1",
    "pre-git": "3.15.3",
    "semantic-release": "8.0.4",
    "snap-shot-it": "4.0.1",
    "standard": "10.0.3"
  },
  "dependencies": {
    "check-more-types": "2.24.0",
    "debug": "3.1.0",
    "ggit": "2.3.0",
    "largest-semantic-change": "1.0.0",
    "latest-version-or-tag": "1.2.0",
    "lazy-ass": "1.6.0",
    "minimist": "1.2.0",
    "npm-utils": "2.0.0",
    "ramda": "0.24.1",
    "semver": "5.4.1",
    "simple-commit-message": "3.3.1"
  },
  "release": {
    "analyzeCommits": "simple-commit-message"
  }
}
