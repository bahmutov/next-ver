{
  "name": "next-ver",
  "description": "Tells you the next semantic version for your local package",
  "version": "1.0.0",
  "author": "Gleb Bahmutov <gleb.bahmutov@gmail.com>",
  "bugs": "https://github.com/bahmutov/next-ver/issues",
  "config": {
    "pre-git": {
      "commit-msg": "simple",
      "pre-commit": [
        "npm prune",
        "npm run deps",
        "npm test",
        "npm run ban"
      ],
      "pre-push": [
        "npm run secure",
        "npm run license",
        "npm run ban -- --all",
        "npm run size"
      ],
      "post-commit": [],
      "post-merge": []
    }
  },
  "engines": {
    "node": ">=6"
  },
  "files": [
    "src/*.js",
    "!src/*-spec.js"
  ],
  "homepage": "https://github.com/bahmutov/next-ver#readme",
  "keywords": [
    "next",
    "semantic",
    "semver",
    "version"
  ],
  "license": "MIT",
  "main": "src/",
  "noScopeName": "next-ver",
  "publishConfig": {
    "registry": "http://registry.npmjs.org/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bahmutov/next-ver.git"
  },
  "scripts": {
    "ban": "ban",
    "deps": "deps-ok && dependency-check .",
    "issues": "git-issues",
    "license": "license-checker --production --onlyunknown --csv",
    "lint": "standard --verbose --fix src/*.js",
    "pretest": "npm run lint",
    "secure": "nsp check",
    "size": "t=\"$(npm pack .)\"; wc -c \"${t}\"; tar tvf \"${t}\"; rm \"${t}\";",
    "test": "npm run unit",
    "unit": "mocha src/*-spec.js"
  },
  "devDependencies": {
    "ban-sensitive-files": "1.8.3",
    "dependency-check": "2.6.0",
    "deps-ok": "1.2.0",
    "git-issues": "1.3.1",
    "license-checker": "8.0.0",
    "mocha": "3.1.0",
    "nsp": "2.6.1",
    "pre-git": "3.10.0",
    "standard": "8.5.0"
  }
}
